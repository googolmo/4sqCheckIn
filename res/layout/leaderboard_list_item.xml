<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/leaderboardParent"
    style="@style/ListViewItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@id/leaderboardMeMarker"
        android:layout_width="5.0dip"
        android:layout_height="fill_parent"
        android:background="@color/leaderboard_progress_meter"
        android:visibility="gone" />

    <TextView
        android:id="@id/leaderboardRank"
        android:layout_width="38.0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="4.0dip"
        android:paddingLeft="4.0dip"
        android:singleLine="true"
        android:textAppearance="@style/TextViewBold"
        android:textColor="@color/black_end"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@id/leaderboardUserPhoto"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5.0dip"
        android:layout_marginTop="4.0dip"
        android:background="@drawable/photo_background"
        android:padding="3.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/blank_boy" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="5.0dip"
        android:paddingLeft="10.0dip" >

        <TextView
            android:id="@id/leaderboardUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextViewBold"
            android:textColor="@color/black_end"
            android:textSize="14.0sp" />

        <TextView
            android:id="@id/leaderboardBlurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#aa000000"
            android:textSize="12.0sp" />
    </LinearLayout>

    <TextView
        android:id="@id/leaderboardScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2.0dip"
        android:singleLine="true"
        android:textAppearance="@style/TextViewBold"
        android:textColor="@color/black_end"
        android:textSize="20.0sp" />

    <ImageView
        android:id="@id/leaderboardChevron"
        android:layout_width="10.0dip"
        android:layout_height="14.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="5.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_light_grey" />

</LinearLayout>